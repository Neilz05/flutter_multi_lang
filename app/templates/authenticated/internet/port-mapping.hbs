{{page-title "Port Mapping"}}

<Internet::PortMapping @portMapping={{@model.PortMapping}} @host={{@model.Hosts}} @readOnly={{false}} @sshServer={{@model.SSHServer}}/>

  <div class="d-flex justify-content-end">
    <button type="button" class="btn btn-primary" style="width: fit-content;" {{on "click" this.Apply}} disabled={{unless this.hasChanges "disabled"}}>{{t 'PAGE_SETTINGS_APPLY'}}</button>
    <button type="button" class="btn btn-secondary ms-2" style="width: fit-content;" onClick={{this.Cancel}} disabled={{unless this.hasChanges "disabled"}}>{{t 'PAGE_SETTINGS_CANCEL'}}</button>
  </div>
