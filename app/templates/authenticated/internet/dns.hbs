{{page-title "DNS"}}
<div class="card mb-3">
  <div class="card-header sc">
    <label class="fs-4 fw-bold ms-3" tabindex="0" aria-label="{{t 'PAGE_DNS_DDNS_TITLE'}}">{{t 'PAGE_DNS_DDNS_TITLE'}}</label>
  </div>

  <div class="card-body">
    <div class="row py-1 ps-3">
      <p tabindex="0" aria-label="{{t 'PAGE_DNS_DDNS_SUBTITLE'}}">{{t 'PAGE_DNS_DDNS_SUBTITLE'}}</p>
       <Ui::RadioButton
        @label={{t 'PAGE_DNS_DDNS_DNS_CONFIGURATION'}}
        @rad1={{t 'PAGE_DNS_DDNS_DNS_AUTO'}}
        @rad2={{t 'PAGE_DNS_DDNS_DNS_MANU'}}
        @get_param={{this.secureDnsEnable}}
        @set_param={{this.updateSecureDnsMode}}
      />
      <Ui::RenderIf @data={{this.model.securedns}} @onHide={{this.secureDnsEnable}}>
        <Ui::Toggle-Button @label={{t 'PAGE_DNS_DDNS_CONFIG_FOR_ALL_DEVICES'}} @checked={{this.configAllDevices}}/>
        <Ui::RenderIf @data={{this.model.dhcpv4}} @onHide={{not this.configAllDevices}}>
          <div class="col-md-5">
            <p class="fw-bold ms-3" tabindex="0" aria-label="{{t 'PAGE_DNS_DDNS_DNS_ADDRESS'}}">{{t 'PAGE_DNS_DDNS_DNS_ADDRESS'}}</p>
          </div>
          <div class="col-md-7">
            <div class="d-flex align-items-center">
              <Ui::IpAddr @ip={{this.getWanServerIpAddressOne}} @id="wanServer-1" @disabled={{false}} @onUpdate={{this.setWanServer}}/>
            </div>
          </div>
          <div class="col-md-5">
            <p class="fw-bold ms-3" tabindex="0" aria-label="{{t 'PAGE_DNS_DDNS_SECOND_DNS_ADDRESS'}}">{{t 'PAGE_DNS_DDNS_SECOND_DNS_ADDRESS'}}</p>
          </div>
          <div class="col-md-7">
            <div class="d-flex align-items-center">
              <Ui::IpAddr @ip={{this.getWanServerIpAddressTwo}} @id="wanServer-2" @disabled={{false}} @onUpdate={{this.setWanServer}}/>
            </div>
          </div>
        </Ui::RenderIf>
        <div class="bg-light p-4">
            <div class="alert alert-warning border border-danger rounded-3 d-flex align-items-start p-3" role="alert">
                <div class="me-2">
                    <i class="bi bi-exclamation-circle-fill text-danger fs-4"></i>
                </div>
                <div tabindex="0" aria-label="{{t "PAGE_DNS_DDNS_INFO"}}">{{t "PAGE_DNS_DDNS_INFO"}}</div>
            </div>
          </div>
      </Ui::RenderIf>
    </div>
    
  </div>
</div>
{{#if this.errMessages.length}}
    {{#each this.errMessages as |error|}}
        <div class="invalid-feedback alert alert-danger" role="alert" tabindex="0" aria-label="{{error}}">
            {{error}}
        </div>
    {{/each}}
{{/if}} 
  <Ui::UpdateButton 
  @onApply={{this.apply}} 
  @onCancel={{this.cancel}} 
  @disabled={{unless this.hasChanges "disabled"}}
/>