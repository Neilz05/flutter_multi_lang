{{page-title "Wan"}}
<div class="card mb-3">
  <div class="card-header sc" tabindex="0" aria-label="{{t 'PAGE_PAGE_POLICY_ROUTING_WAN_PROFILE'}}: {{@model.wanmanager.WANMode}}">
    {{t 'PAGE_PAGE_POLICY_ROUTING_WAN_PROFILE'}}: {{@model.wanmanager.WANMode}}
  </div>
  <div class="card-body">
    <Settings::WanInterface 
    @wanmanager={{@model.wanmanager}} 
    @ethernetvlantermination={{@model.ethernetvlantermination}} 
    @nat={{@model.nat}} 
    @ppp={{@model.ppp}} 
    @server={{@model.dhcpv4.Server}} 
    @client={{@model.dhcpv4.Client}} 
    @hosts={{@model.hosts}} 
    @ipinterface={{@model.ipinterface}} 
    @xpononu={{@model.xpononu}} 
    @dns_server={{@model.dns_server}} 
    @dns_wan_conf={{@model.x_prpl_com_config}} 
    @macToClone={{this.MacToClone}} 
    @onMacToCloneUpdate={{fn (mut this.macToClone)}} 
    @clonedmacaddress={{@model.deviceinfo.X_PRPLWARE-COM_ClonedMACAddress}}
    @users={{@model.users}}
    @ethernet_link={{@model.ethernetlink}}/>
  </div>
</div>
{{#if this.isSuperAdmin}}
  <div class="d-flex justify-content-end">
    <button type="button" class="btn btn-primary" style="width: fit-content;" {{on "click" this.Apply}} {{on "keyup" this.eaactrl.btnApply}} disabled={{unless this.hasChanges "disabled"}}>{{t 'PAGE_SETTINGS_APPLY'}}</button>
    <button type="button" class="btn btn-secondary ms-2" style="width: fit-content;" onClick={{this.Cancel}} {{on "keyup" this.eaactrl.btnCancel}}>{{t 'PAGE_SETTINGS_CANCEL'}}</button>
  </div>
{{/if}}