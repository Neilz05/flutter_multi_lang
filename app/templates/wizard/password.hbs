<div class="container py-5">

    <!-- Password Change Form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4" tabindex="0" aria-label="Change Router Access Password">Change Router Access Password</h4>

            <p class="text-center text-muted small mb-4">
                <span tabindex="0" aria-label="For your security, please change the default router access password.">For your security, please change the default router access password.</span><br>
                <span tabindex="0" aria-label="Enter the new password and confirmation, then press Proceed to continue.">Enter the new password and confirmation, then press <strong>Proceed</strong> to continue.</span>
            </p>

            <form {{on 'submit' this.handleSubmit}}>
                <div class="mb-3 row">
                    <label for="new_password" class="col-sm-4 col-form-label text-end" tabindex="0" aria-label="New Password">New Password:</label>
                    <div class="col-sm-6">
                        {{#if (eq this.showPassword1 true)}}
                        <div class="input-group mb-3">
                            <Input @type="text"
                                class="form-control {{if this.wizard.PasswordChangeSet.error.Password.validation 'is-invalid'}}"
                                id="new_password" placeholder="Enter new password"
                                @value={{this.wizard.PasswordChangeSet.Password}} />
                            <span id='eye' class="input-group-text" {{on "click" this.eyeControl1}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_SHOW_PASSWORD"}}">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        {{else}}
                        <div class="input-group mb-3">
                            <Input @type="password"
                                class="form-control {{if this.wizard.PasswordChangeSet.error.Password.validation 'is-invalid'}}"
                                id="new_password" placeholder="Enter new password"
                                @value={{this.wizard.PasswordChangeSet.Password}} />
                            <span id='eye' class="input-group-text" {{on "click" this.eyeControl1}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_HIDE_PASSWORD"}}">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                        </div>
                        {{/if}}
                        {{#if (not-eq this.wizard.PasswordChangeSet.error.Password.validation NULL)}}
                        <div class="invalid-feedback" tabindex="0" aria-label="{{this.wizard.PasswordChangeSet.error.Password.validation}}">{{this.wizard.PasswordChangeSet.error.Password.validation}}</div>
                        {{/if}}
                    </div>
                </div>

                <div class="mb-4 row">
                    <label for="confirm_password" class="col-sm-4 col-form-label text-end" tabindex="0" aria-label="Confirm Password">Confirm Password:</label>
                    <div class="col-sm-6">
                        {{#if (eq this.showPassword2 true)}}
                        <div class="input-group mb-3">
                            <Input @type="text"
                                class="form-control {{if this.wizard.PasswordChangeSet.error.ConfirmPassword.validation 'is-invalid'}}"
                                id="confirm_password" placeholder="Confirm new password"
                                @value={{this.wizard.PasswordChangeSet.ConfirmPassword}} />
                            <span id='eye2' class="input-group-text" {{on "click" this.eyeControl2}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_SHOW_PASSWORD"}}">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        {{else}}
                        <div class="input-group mb-3">
                            <Input @type="password"
                                class="form-control {{if this.wizard.PasswordChangeSet.error.ConfirmPassword.validation 'is-invalid'}}"
                                id="confirm_password" placeholder="Confirm new password"
                                @value={{this.wizard.PasswordChangeSet.ConfirmPassword}} />
                            <span id='eye2' class="input-group-text" {{on "click" this.eyeControl2}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_HIDE_PASSWORD"}}">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                        </div>
                        {{/if}}

                        {{#if this.wizard.PasswordChangeSet.error.ConfirmPassword}}
                        {{#each this.wizard.PasswordChangeSet.error.ConfirmPassword.validation as |message|}}
                        <div class="invalid-feedback" tabindex="0" aria-label="{{message}}">{{message}}</div>
                        {{/each}}
                        {{/if}}

                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-center">
                    {{!-- <LinkTo @route="wizard.greeting" class="btn btn-outline-secondary me-3" id="back">Back
                    </LinkTo> --}}
                    {{#if (or (eq this.wizard.state 'stand-alone') (eq this.wizard.state 'pnp-router'))}}
                    <LinkTo @route="wizard.pppoe" class="btn btn-outline-secondary me-3" id="back">Back</LinkTo>
                    {{/if}}

                    {{#if (eq this.wizard.state 'triple-play')}}
                    <LinkTo @route="wizard.sip" class="btn btn-outline-secondary me-3" id="back">Back</LinkTo>
                    {{/if}}


                    <button type="submit" class="btn btn-primary" id="proceed">Proceed</button>
                    {{!-- <LinkTo @route="authenticated.dashboard" class="btn btn-primary" id="proceed">Proceed</LinkTo>
                    --}}
                </div>
            </form>
        </div>
    </div>
</div>