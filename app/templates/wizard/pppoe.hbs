<div class="container py-5">
    <!-- Setup Form Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4" tabindex="0" aria-label="Router Configuration">Router Configuration</h4>

            <form {{on 'submit' this.handleSubmit}}>
                <div class="mb-3 row">
                    <label for="user_name" class="col-sm-4 col-form-label text-end align-self-center" tabindex="0" aria-label="Username">Username:</label>
                    <div class="col-sm-6">
                        <Input class="form-control {{if this.wizard.pppChangeSet.error.Username.validation 'is-invalid'}}" @type="text"
                            id="user_name" placeholder="" @value={{this.wizard.pppChangeSet.Username}} />
                        {{#if (not-eq this.wizard.pppChangeSet.error.Username.validation NULL)}}
                        {{#each this.wizard.pppChangeSet.error.Username.validation as |message|}}
                            <div class="invalid-feedback" tabindex="0" aria-label="{{message}}">
                                {{message}}
                            </div>
                        {{/each}}
                        {{/if}}
                    </div>

                </div>

                <div class="mb-3 row">
                    <label for="user_pwd" class="col-sm-4 col-form-label text-end align-self-center" tabindex="0" aria-label="Password">Password:</label>
                    <div class="col-sm-6">
                        {{#if (eq this.showPassword1 true)}}
                        <div class="input-group mb-3">
                            <Input @type="text" class="form-control {{if this.wizard.pppChangeSet.error.Password.validation 'is-invalid'}}"
                                id="user_pwd" placeholder="" @value={{this.wizard.pppChangeSet.Password}} />
                            <span id='eye' class="input-group-text" {{on "click" this.eyeControl1}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_SHOW_PASSWORD"}}"><i class="bi bi-eye"></i></span>
                        </div>
                        {{else}}
                        <div class="input-group mb-3">
                            <Input @type="password" class="form-control {{if this.wizard.pppChangeSet.error.Password.validation 'is-invalid'}}"
                                id="user_pwd" placeholder="" @value={{this.wizard.pppChangeSet.Password}} />
                            <span id='eye' class="input-group-text" {{on "click" this.eyeControl1}} {{on "keyup" this.eaactrl.eyeControlTrigger}} role="button" tabindex="0" aria-label="{{t "MESSAGES_HIDE_PASSWORD"}}"><i class="bi bi-eye-slash"></i></span>
                        </div>
                        {{/if}}
                        {{#if (not-eq this.wizard.pppChangeSet.error.Password.validation NULL)}}
                        <div class="invalid-feedback" tabindex="0" aria-label="{{this.wizard.pppChangeSet.error.Password.validation}}">
                            {{this.wizard.pppChangeSet.error.Password.validation}}
                        </div>
                        {{/if}}
                    </div>

                </div>

                {{#if (eq this.wizard.state 'pnp-router')}}
                <div class="mb-3 row">
                    <label for="vlan_id" class="col-sm-4 col-form-label text-end align-self-center" tabindex="0" aria-label="VLAN ID">VLAN ID:</label>
                    <div class="col-sm-6">
                        {{#if (this.isUntagged this.wizard.InternetVLANChangeSet)}}
                        <Input class="form-control {{if this.wizard.InternetVLANChangeSet.error.VLANID.validation 'is-invalid'}}" @type="text" id="vlan_id"
                            placeholder="" @value="0" {{on 'input' (fn this.handleInputChange)}} />
                        {{else}}
                        <Input class="form-control {{if this.wizard.InternetVLANChangeSet.error.VLANID.validation 'is-invalid'}}" @type="text" id="vlan_id"
                            placeholder="" @value={{this.wizard.InternetVLANChangeSet.VLANID}} {{on 'input' (fn this.handleInputChange)}} />
                        {{/if}}
                        {{#if (not-eq this.wizard.InternetVLANChangeSet.error.VLANID.validation NULL)}}
                        <div class="invalid-feedback" tabindex="0" aria-label="{{this.wizard.InternetVLANChangeSet.error.VLANID.validation}}">
                            {{this.wizard.InternetVLANChangeSet.error.VLANID.validation}}
                        </div>
                        {{/if}}
                        {{#if this.invalidInternetVLANMessage}}
                        <div class="invalid-feedback">{{this.invalidInternetVLANMessage}}</div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}

                <!-- Helper Text -->
                <div class="row">
                    <div class="col-sm-10 offset-sm-1">
                        <p class="text-muted small text-center mt-3">
                            <span tabindex="0" aria-label="Please enter the username and password provided by your ISP.">Please enter the username and password provided by your ISP.</span><br>
                            {{#if (eq this.wizard.state 'pnp-router')}}
                            <span tabindex="0" aria-label="Fill in the VLAN ID if it is required.">Fill in the VLAN ID if it is required.</span>
                            {{/if}}
                        </p>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    {{#if (or (eq this.wizard.state 'stand-alone') (eq this.wizard.state 'pnp-router'))}}
                    <LinkTo @route="wizard.greeting" class="btn btn-outline-secondary me-3" id="back">Back</LinkTo>
                    {{/if}}
                    {{#if (eq this.wizard.state 'triple-play')}}
                    <LinkTo @route="wizard.networkvlan" class="btn btn-outline-secondary me-3" id="back">Back</LinkTo>
                    {{/if}}

                    <button type="submit" class="btn btn-primary" id="proceed">Proceed</button>
                    {{!-- <LinkTo @route={{if (eq this.wizard.state "triple-play" ) "wizard.sip" "wizard.password" }}
                        class="btn btn-primary" id="proceed">Proceed</LinkTo> --}}
                </div>
            </form>
        </div>
    </div>
</div>