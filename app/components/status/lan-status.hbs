<div class="card mb-3">
  <div class="card-header sc" tabindex="0" aria-label="{{t 'SUB_SUB_NAVIGATION_ITEM_LAN_STATUS'}}">{{t 'SUB_SUB_NAVIGATION_ITEM_LAN_STATUS'}}</div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <div class="row mb-2 table-entry attr-name" tabindex="0" aria-label="{{t 'PAGE_STATUS_LAN_NETWORK_IPV4'}}">{{t 'PAGE_STATUS_LAN_NETWORK_IPV4'}}</div>
      </div>
      <div class="col-md-9">
        {{#each @ip.Interface as |iface|}}
        {{#if (eq iface.Alias 'lan')}}
        {{#each iface.IPv4Address as |ipAddr i|}}
        {{#if (eq i 0)}}
        <div class="row mb-2 table-entry" tabindex="0" aria-label="{{ipAddr.IPAddress}}/{{convert-to-cidr ipAddr.SubnetMask}}">{{ipAddr.IPAddress}}/{{convert-to-cidr ipAddr.SubnetMask}}</div>
        {{/if}}
        {{/each}}
        {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="row mb-2 table-entry attr-name" tabindex="0" aria-label="{{t 'PAGE_STATUS_LAN_NETWORK_DEFAULT_GATEWAY'}}">{{t 'PAGE_STATUS_LAN_NETWORK_DEFAULT_GATEWAY'}}</div>
      </div>
      <div class="col-md-9">
        {{#each @ip.Interface as |iface|}}
        {{#if (eq iface.Alias 'lan')}}
        {{#each iface.IPv4Address as |ipAddr i|}}
        {{#if (eq i 0)}}
        <div class="row mb-2 table-entry" tabindex="0" aria-label="{{ipAddr.IPAddress}}">{{ipAddr.IPAddress}}</div>
        {{/if}}
        {{/each}}
        {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="row mb-2 table-entry attr-name" tabindex="0" aria-label="{{t 'PAGE_STATUS_LAN_NETWORK_MAC'}}">{{t 'PAGE_STATUS_LAN_NETWORK_MAC'}}</div>
      </div>
      <div class="col-md-9" tabindex="0" aria-label="{{this.MACAddress}}">
        {{!-- {{#each @ethernet.Interface as |eIface|}}
