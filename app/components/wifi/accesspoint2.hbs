  <div class="col">
    <label>{{t 'PAGE_GENERAL_BROADCAST_SSID'}} {{@freq}}</label>
  </div>
  <div class="col">
    <label class="switch">
      <Input @type="checkbox" @checked={{eq @accesspoint.SSIDAdvertisementEnabled 1}} class="form-check-input" {{on 'input' (fn this.Toggle @accesspoint 'SSIDAdvertisementEnabled')}}/>
      <span class="slider round"></span>
    </label>
  </div>
</div>

